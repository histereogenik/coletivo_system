POSTGRES_HOST=your-postgres-host
POSTGRES_PORT=5432
POSTGRES_DB=coletivo
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me

# Example: gdrive:coletivo_system/backups
GDRIVE_PATH=gdrive:your-folder/backups

# Retention policy in days (set 0 to disable deletion)
RETENTION_DAYS=30

# Optional backup naming
BACKUP_FILE_PREFIX=coletivo

# Optional behavior
BACKUP_MODE=loop
BACKUP_RUN_ON_START=true
BACKUP_INTERVAL_SECONDS=86400

# One of the options below is required:
# 1) Base64-encoded ~/.config/rclone/rclone.conf
RCLONE_CONF_B64=
# 2) Raw file content (multiline) if your platform supports it
# RCLONE_CONF_CONTENT=
